<header class='flex whitespace-nowrap items-center justify-center bg-white shadow-md w-screen h-[60px]'>
    <%= link_to 'Image Viewer', '/', id: 'app-title', class: 'text-blue-500 mr-8 text-3xl font-semibold' %>
    <nav class="flex items-center gap-4  h-[100%]">
      <a href="/images" class="relative h-[100%] flex items-center text-gray-500 hover:text-gray-900 hover:font-bold">
        <%  if (request.path == '/images' || request.path == '/') %>
          <span id='current-path' class="absolute left-0 right-0 h-[60px] border-t-4 border-blue-400"></span>
          <span class="block relative px-3 font-bold">All image</span>
        <%  else  %>
          <span class="block relative px-3 hover:font-bold">All image</span>
        <%  end  %>
      </a>
      <a href="/images/new" class="relative h-[100%] flex items-center text-gray-500 hover:text-gray-900">
        <%  if request.path == '/images/new' %>
          <span id='current-path' class="absolute left-0 right-0 h-[60px] border-t-4 border-blue-400"></span>
          <span class="block relative px-3 font-bold">New Image</span>
        <%  else  %>
          <span class="block relative px-3 hover:font-bold">New Image</span>
        <%  end  %>
      </a>
    </nav>
</header>