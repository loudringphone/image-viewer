<div data-controller='image' data-image-id="<%= @image.id %>">
  <h1>Title: <%= @image.title %></h1>

  <p>Uploaded Time: <%= @image.uploaded_time.strftime("%Y-%m-%d %H:%M:%S") %></p>

  <img src="<%= @image.attachment_url %>" alt="<%= @image.title %>">

  <p data-target="image.msg"><%= @visitor_msg %></p>
</div>
